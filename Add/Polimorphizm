    public static void main(String[] args) {
        MathUtils math = new MathUtils();
        System.out.println(math.sum(5, 10));       // 15
        System.out.println(math.sum(5.5, 2.2));   // 7.7
        System.out.println(math.sum(1, 2, 3));    // 6
    }
}
