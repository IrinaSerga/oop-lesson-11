    @Override
    public void swim() {
        System.out.println("–°–æ–±–∞–∫–∞ –ø–ª—ã–≤–µ—Ç");
    }

    @Override
    public void run() {
        System.out.println("–°–æ–±–∞–∫–∞ –±–µ–∂–∏—Ç");
    }
}

